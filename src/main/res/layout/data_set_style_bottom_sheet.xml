<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="DataSetStyleBottomSheetBinding">

        <variable
            name="dataSet"
            type="com.shlom.solutions.quickgraph.viewmodel.dataset.editor.DataSetStyleViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/data_set_style_line_layout"
            layout="@layout/style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:style="@{dataSet.lineStyle}" />

        <include
            android:id="@+id/data_set_style_points_layout"
            layout="@layout/style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_set_style_line_layout"
            app:style="@{dataSet.pointsStyle}" />

    </android.support.constraint.ConstraintLayout>

</layout>