<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="card"
            type="com.shlom.solutions.quickgraph.viewmodel.ICardPreviewEditableViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:onClick="@{card.itemClickHandler}">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_aspectRatio="100%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:id="@+id/project_list_item_preview_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"
                    android:contentDescription="@string/unknown"
                    android:scaleType="centerCrop"
                    app:error="@{card.errorImage}"
                    app:imageUri="@{card.imageUri}"
                    app:layout_constraintBottom_toTopOf="@+id/project_list_item_primary_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeHolder="@{card.placeHolder}" />

                <com.shlom.solutions.quickgraph.view.ui.ConfirmEditText
                    android:id="@+id/project_list_item_primary_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences|textNoSuggestions"
                    android:lines="1"
                    android:text="@{card.primaryText}"
                    android:textSize="24sp"
                    app:confirmEdit="@{card::setPrimaryText}"
                    app:hideKeyboardOnLostFocus="@{true}"
                    app:layout_constraintBottom_toTopOf="@+id/project_list_item_secondary_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Primary Text" />

                <TextView
                    android:id="@+id/project_list_item_secondary_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lines="1"
                    android:text="@{card.secondaryText}"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/project_list_item_counter_text"
                    tools:text="Secondary Text" />

                <TextView
                    android:id="@+id/project_list_item_counter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:lines="1"
                    android:text="@{String.valueOf(card.count)}"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/project_list_item_secondary_text"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="1" />

            </android.support.constraint.ConstraintLayout>

        </android.support.percent.PercentFrameLayout>

    </android.support.v7.widget.CardView>

</layout>