<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/data_set_list_item_color_layout"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="16dp">

        <View
            android:id="@+id/data_set_list_item_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/oval" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/data_set_list_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/data_set_list_item_color_layout"
        android:layout_toLeftOf="@+id/data_set_list_item_check"
        android:layout_toRightOf="@+id/data_set_list_item_color_layout"
        android:layout_toStartOf="@+id/data_set_list_item_check"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/data_set_list_item_primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sansserif"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Primary text" />

        <TextView
            android:id="@+id/data_set_list_item_secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            tools:text="Secondary text" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/data_set_list_item_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" />

</RelativeLayout>
